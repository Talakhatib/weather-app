<%= turbo_stream.update "weather_data" do %>
<div class="weather-description">
  <h1> <%= @data["location"]["country"] %></h1>
   <h4><%= @data["location"]["localtime"] %></h4>
  <h2> <%= @data["location"]["name"] %></h2>
  <h3><%= image_tag(@data["current"]["weather_icons"].first)%> <%= @data["current"]["temperature"] %> C</h3>
  <h4> <%= @data["current"]["weather_descriptions"].first %></h4>
  <h4>Wind speed  <%= @data["current"]["wind_speed"] %> km/h</h4>
  <h4>Wind degree  <%= @data["current"]["wind_degree"] %></h4> 
</div>
<% end %>

<%= turbo_stream.update "list" do %>
<div class="search_list">
   <ul>
         <% @searches.each do |s| %>
           <li>
           Country:<%= s.country %><br>
           Name: <%= s.name %><br>
           Temperature: <%= s.temperature %><br>
           Weather Description: <%= s.weather_description %><br>
           Wind Speed: <%= s.wind_speed %><br>
           Wind Degree: <%= s.wind_degree %><br>
           </li>
        <% end %>
       </ul>
</div>
<% end %>